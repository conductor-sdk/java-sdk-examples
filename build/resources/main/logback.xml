<configuration debug="true">

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level - %msg%n</pattern>
        </encoder>
    </appender>
    <logger name="io.orkes" level="INFO"/>
    <root level="error">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>